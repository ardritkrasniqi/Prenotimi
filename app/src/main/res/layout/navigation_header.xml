<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#283593">



    <ImageView
        android:layout_margin="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/logo_pic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/makerspace_pic"/>





        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/amiko"
            android:text="@string/makerspace_text"
            android:textColor="#fff"
            app:layout_constraintTop_toTopOf="@id/logo_pic"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/logo_pic"
            android:textSize="18sp" />

    <TextView
        android:id="@+id/company_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/amiko"

        android:text="@string/makerspace_gmail_com"
        android:textColor="#fff"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/logo_pic"
        app:layout_constraintTop_toBottomOf="@id/company_name" />





</androidx.constraintlayout.widget.ConstraintLayout>